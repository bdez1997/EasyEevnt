<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="91dp"
            android:layout_height="82dp"
            android:layout_marginTop="82dp"
            android:src="@drawable/user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/lblUsername"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="User"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblNombre" />

        <TextView
            android:id="@+id/lblUserDB"
            android:layout_width="143dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:text="User"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblNombreBD" />

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="66dp"
            android:layout_height="34dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblUsername" />

        <TextView
            android:id="@+id/lblEmailDB"
            android:layout_width="143dp"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblUserDB" />

        <TextView
            android:id="@+id/lblTlfn"
            android:layout_width="101dp"
            android:layout_height="33dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="Telefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblEmail" />

        <TextView
            android:id="@+id/lblTlfnDB"
            android:layout_width="143dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:text="Telefono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblEmailDB" />

        <TextView
            android:id="@+id/lblRol"
            android:layout_width="64dp"
            android:layout_height="31dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="Rol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTlfn" />

        <TextView
            android:id="@+id/lblRolDB"
            android:layout_width="143dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:text="Rol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTlfnDB" />

        <TextView
            android:id="@+id/lblNombreBD"
            android:layout_width="141dp"
            android:layout_height="39dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:text="nombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/lblInfo"
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Informacion adiccional"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblRol" />

        <TextView
            android:id="@+id/lblInfoBD"
            android:layout_width="338dp"
            android:layout_height="111dp"
            android:layout_marginTop="24dp"
            android:text="Infor...."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblInfo" />

        <Button
            android:id="@+id/btnEditarProfile"
            android:layout_width="355dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Editar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblInfoBD" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>